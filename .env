# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/halicred_db
POSTGRES_USER=halicred_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=halicred_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_PRIVATE_KEY_PATH=./keys/private_key.pem
JWT_PUBLIC_KEY_PATH=./keys/public_key.pem

# HMAC for audit trails
AUDIT_HMAC_SECRET=your_audit_hmac_secret_key_here

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
CLIMATIQ_API_KEY=your_climatiq_api_key_here

# File Storage
UPLOAD_DIR=/tmp/evidence_uploads
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,tiff

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=halicred-evidence-bucket
AWS_REGION=us-east-1

# MinIO (alternative to S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=halicred-evidence

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@halicred.com

# SMS Configuration (for OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
APP_NAME=HaliCred
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://your-frontend-domain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# External APIs
KENYA_WEATHER_API_KEY=your_weather_api_key
CARBON_REGISTRY_API_KEY=your_carbon_registry_key

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key_here
HASH_SALT=your_hash_salt_here

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Development/Testing
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/halicred_test_db
PYTEST_TIMEOUT=300

# Production Settings (uncomment for production)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# SECURE_COOKIES=true
# FORCE_HTTPS=true